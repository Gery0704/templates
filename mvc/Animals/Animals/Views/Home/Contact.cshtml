
@using Animals.Models;

@model Notify


<form asp-controller="Home" asp-action="Contact">

    <table>
        <tr>
            <td colspan="2">
                <div asp-validation-summary="ModelOnly" class="failureNotification"></div>
            </td>
        </tr>
        <tr>
            <td width="120">
                Helyszín:
            </td>
            <td class="failureNotification">
                <input asp-for="Location" />
                <span asp-validation-for="Location"></span>
            </td>
        </tr>
        <tr>
            <td width="120">
                Időpont:
            </td>
            <td class="failureNotification">
                <input asp-for="Created" />
                <span asp-validation-for="Created"></span>
            </td>
        </tr>
        <tr>
            <td width="120">
                Fajta:
            </td>
            <td class="failureNotification">
                <div>
                    <p>
                        @Html.DropDownList("AnimalType", new SelectList(ViewBag.List, "Value", "Text"))
                        <span asp-validation-for="AnimalType" class="text-danger"></span>
                    </p>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2" height="50">
                <input type="submit" value="Bejelentkezés" class="button" />
            </td>
        </tr>
    </table>
</form>
