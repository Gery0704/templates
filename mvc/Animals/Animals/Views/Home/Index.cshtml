@model IEnumerable<Animals>

<table class="table">
    <thead>
        <tr>
            <th>
                Név
            </th>
            <th>
                Születési dátum
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Home" asp-action="Details" asp-route-AnimalID="@item.ID">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
            </tr>
        }
    </tbody>
</table>
