@model IEnumerable<AnimalPictures>

<table class="table">
    <thead>
        <tr>
            <th>
                Név
            </th>
            <th>
                Fajta
            </th>
            <th>
                Kép
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnimalType)
            </td>
            <td>
                <a asp-controller="Home" asp-action="ImageForAnimal" asp-route-AnimalID="@item.ID">@Html.DisplayFor(modelItem => item.PicturePath)</a>
                
            </td>
        </tr>
        }
    </tbody>
</table>
